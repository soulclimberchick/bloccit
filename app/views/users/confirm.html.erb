<h2>Sign Up Confrimation</h2>

<div class="row">
  <div class="col-md-8">
    <h4>Are you sure these values are correct?</h4>
    <p>Email: <%= @user.email %></p>
    <p>Name: <%= @user.name %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <%= button_to "Yes", { controller: "users", action: "create", params: { user: user_params } }, class: 'btn btn-success' %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <%= button_to "No", { controller: "users", action: "new" }, class: 'btn btn-failure', :method => :get %>
  </div>
</div>
